{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": {
    "text": "Number of UFC Fighters by Country",
    "anchor": "middle",
    "fontSize": 19,
    "dy": -20
  },
  "width": 800,
  "height": 400,
  "projection": {"type": "equalEarth"},
  "data": {
    "url": "https://raw.githubusercontent.com/HenryW714/FIT3179-Visualisation-2/refs/heads/main/Data/ne_110m.json",
    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
  },
  "transform": [
    {
      "lookup": "properties.NAME",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/HenryW714/FIT3179-Visualisation-2/refs/heads/main/Data/fighters_per_nation.csv"
        },
        "key": "Country",
        "fields": ["Number of Fighters"]
      }
    },
    {
      "calculate": "datum['Number of Fighters'] == null || datum['Number of Fighters'] == 0 ? -1 : datum['Number of Fighters']",
      "as": "Fighters_filled"
    }
  ],
  "mark": {"type": "geoshape",
          "stroke": "black",
          "strokeWidth": 0.5
          },
  "encoding": {
    "color": {
      "field": "Fighters_filled",
      "type": "quantitative",
      "scale": {"type": "log", "scheme": "greenblue", "domainMin": 1},
      "condition": {
        "test": "datum.Fighters_filled == -1",
        "value": "lightgrey"
      },
      "legend": {"title": "Number of Fighters"}
    },
    "tooltip": [
      {"field": "properties.NAME", "type": "nominal", "title": "Country"},
      {
        "field": "Number of Fighters",
        "type": "quantitative",
        "title": "Number of Fighters"
      }
    ]
  },
  "config": {}
}