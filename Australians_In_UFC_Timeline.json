{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Australian Fighters in The UFC Throughout the Years",
  "width": 800,
  "height": 400,
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/HenryW714/FIT3179-Visualisation-2/refs/heads/main/Data/aus_active_fighters_per_year.csv"
      },
      "mark": "line",
      "encoding": {
        "x": {"field": "Year", "type": "ordinal", "title": "Year"},
        "y": {
          "field": "AustralianFighters",
          "type": "quantitative",
          "title": "Number of Active Fighters"
        },
        "tooltip": [
          {"field": "Year", "type": "ordinal"},
          {"field": "AustralianFighters", "type": "quantitative"}
        ]
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/HenryW714/FIT3179-Visualisation-2/refs/heads/main/Data/aus_active_fighters_per_year.csv"
      },
      "mark": {"type": "line", "point": true},
      "encoding": {
        "x": {"field": "Year", "type": "ordinal", "title": "Year"},
        "y": {
          "field": "AustralianFighters",
          "type": "quantitative",
          "title": "Number of Active Fighters"
        },
        "tooltip": [
          {"field": "Year", "type": "ordinal"},
          {"field": "AustralianFighters", "type": "quantitative"}
        ]
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/HenryW714/FIT3179-Visualisation-2/refs/heads/main/Data/Australian_Fighter_Active_Years_expanded.csv"
      },
      "transform": [
        {
          "filter": "selected_fighter != '' && test(lower(selected_fighter), lower(datum.Fighter))"
        }
      ],
      "mark": {
        "type": "line",
        "color": "green",
        "strokeWidth": 3,
        "point": {"filled": true, "size": 100, "color": "teal"}
      },
      "encoding": {
        "x": {"field": "Year", "type": "ordinal"},
        "y": {"value": 1},
        "tooltip": [
          {"field": "Fighter", "type": "nominal"},
          {"field": "FirstYear", "type": "ordinal"},
          {"field": "LastYear", "type": "ordinal"}
        ]
      }
    },
    {
