{
  "$schema": "https://vega.github.io/schema/vega-lite/v6.json",
  "title": {
    "text": "Winning Methods of Australian UFC Champions",
    "anchor": "middle",
    "fontSize": 19,
    "dy": -20
  },
  "data": {
    "url": "https://raw.githubusercontent.com/HenryW714/FIT3179-Visualisation-2/refs/heads/main/Data/australian_champion_finish_long.csv"
  },
  "width": 500,
  "height": 220,
  "mark": {"type": "rect", "tooltip": true},
  "encoding": {
    "x": {
      "field": "Method",
      "type": "nominal",
      "title": "Winning Method",
      "sort": [
        "KO/TKO",
        "Submission",
        "Unanimous Decision",
        "Split Decision",
        "Majority Decision",
        "Disqualification"
      ],
      "axis": {"labelAngle": 0, "orient": "top"}
    },
    "y": {
      "field": "WinnerName",
      "type": "nominal",
      "title": "Fighter",
      "sort": "-x"
    },
    "color": {
      "field": "Count",
      "type": "quantitative",
      "title": "Number of Wins",
      "scale": {"scheme": "reds"}
    },
    "tooltip": [
      {"field": "WinnerName", "title": "Champion"},
      {"field": "Method", "title": "Finish"},
      {"field": "Count", "title": "Wins"}
    ]
  },
  "config": {
    "axis": {"labelFontSize": 12, "titleFontSize": 14},
    "view": {"stroke": "transparent"}
  }
}